<!DOCTYPE html>
<html>
	<head>
		<title>Spectrify Server</title>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>

		<%= stylesheet_link_tag	'application', media: 'all' %>
		<%= javascript_include_tag 'application' %>
	</head>

	<body>
		<nav id="nav-slide" class="navbar fixed-top navbar-light bg-light">
			<div class="container">
				<a class="navbar-brand" href="/">Spectrify</a>
				<ul class="navbar-nav ml-auto">
					<li class="nav-item">
						<% unless @current_user.present? %>
							<a class="nav-link" href="/login">Log In</a>
						<% else %>
							<a class="nav-link" href="/logout">Log Out</a>
						<% end %>
					</li>
				</ul>
			</div>
		</nav>
		<%= yield %>
	</body>
</html>
